# CONFIGURAÇÕES DE API

# OpenAI API Key (obrigatória para análise com LLM)
OPENAI_API_KEY=sk-your-openai-api-key-here

# News API Key (opcional, para busca de notícias)
NEWS_API_KEY=your-news-api-key-here

# CONFIGURAÇÕES DE DADOS

# Caminho para o arquivo de dados SRAG do DataSUS
DATA_PATH=data/raw/srag_data.csv

# Caminho para dados processados
PROCESSED_DATA_PATH=data/processed/

# Caminho para relatórios gerados
REPORTS_PATH=data/reports/

# CONFIGURAÇÕES DE LOGGING

# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Arquivo de log
LOG_FILE=logs/srag_system.log

# Formato de log (JSON, TEXT)
LOG_FORMAT=JSON

# Rotação de logs (tamanho máximo em MB)
LOG_MAX_SIZE_MB=100

# CONFIGURAÇÕES DE CACHE

# TTL do cache em segundos (3600 = 1 hora)
CACHE_TTL=3600

# URL do Redis (se usar cache distribuído)
REDIS_URL=redis://localhost:6379

# Habilitar cache em disco
DISK_CACHE_ENABLED=true

# Diretório do cache em disco
DISK_CACHE_DIR=data/cache/

# CONFIGURAÇÕES DO SISTEMA

# Máximo de tentativas para operações que falharam
MAX_RETRY_ATTEMPTS=3

# Timeout para operações em segundos
TIMEOUT_SECONDS=300

# Máximo de artigos de notícias para analisar
MAX_NEWS_ARTICLES=10

# Período padrão de análise de notícias (dias)
NEWS_SEARCH_DAYS=30

# CONFIGURAÇÕES DE PERFORMANCE

# Número de workers para processamento paralelo
NUM_WORKERS=4

# Tamanho do chunk para leitura de CSV grandes
CSV_CHUNK_SIZE=10000

# Limite de memória para operações (MB)
MEMORY_LIMIT_MB=2048

# CONFIGURAÇÕES DE SEGURANÇA

# Habilitar anonimização de dados pessoais
ENABLE_DATA_ANONYMIZATION=true

# Habilitar validações de guardrails
ENABLE_GUARDRAILS=true

# Nível de segurança (LOW, MEDIUM, HIGH)
SECURITY_LEVEL=HIGH

# Habilitar assinatura digital dos relatórios
ENABLE_REPORT_SIGNING=true

# CONFIGURAÇÕES DE DESENVOLVIMENTO

# Modo debug (não usar em produção)
DEBUG_MODE=false

# Habilitar profiling de performance
ENABLE_PROFILING=false

# Diretório para dados de debug
DEBUG_DATA_DIR=data/debug/

# Salvar dados intermediários para debug
SAVE_INTERMEDIATE_DATA=false
